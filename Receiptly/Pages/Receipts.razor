@page "/Receipts"
@inject IReceiptDalService ReceiptDalService
@inject HttpClient HttpClient
@inject NavigationManager Navigation
<h3>Alla kvitton</h3>

@if (ReceiptList.Count == 0)
{
    <p>Laddar kvitton...</p>
}
else
{
    <ul>
        @foreach (var receipt in ReceiptList)
        {
            <li>
                <a @onclick="(() => OpenReceipt(receipt.Id))">
                    @receipt.StoreName - @receipt.PurchaseDate.ToShortDateString()
                </a>
            </li>
        }
    </ul>
}

@code {
    private List<Receipt> ReceiptList { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Hämta kvitton asynkront via ReceiptDalService
            ReceiptList = await ReceiptDalService.GetAllReceiptsAsync(HttpClient);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading receipts: {ex.Message}");
            ReceiptList = new List<Receipt>(); // Tom lista vid fel
        }
    }

    private void OpenReceipt(int id)
    {
        // Navigate to ReceiptDetails 
        Navigation.NavigateTo($"/receipt/{id}");
    }
}