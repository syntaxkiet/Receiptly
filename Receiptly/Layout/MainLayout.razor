@using Shared.Enum.Components.Home;
@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu OnNavigationAction="@HandleNavigationAction" />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code{
    [Inject]
    public SiteState State {get; set;}
    private NavigationAction currentMainNav {get; set;}
    private async Task HandleNavigationAction(NavigationAction action)
    {
        State.NavEntry = action;
        await State.NavEntryChanged.InvokeAsync();
    }
}